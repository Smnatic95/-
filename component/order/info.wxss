/* component/order/goods_info.wxss */
.bar {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  align-items: center;
}

.bar .shop {
  display: flex;
  align-items: center;
  color: #444;
  align-items: center;
}

.bar .shop .logo {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.bar .shop .arrowRightFont {
  color: #ccc;
  margin-left: 10rpx;
  font-size: 40rpx;
}

.bar .status {
  color: var(--themeColor);
}

.order_info {
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}

.goods_info {
  display: flex;
  width: 100%;
}

.goods_info .thumb {
  width: 30%;
  border-radius: 30rpx;
  flex-shrink: 0;
}

.goods_info .detail {
  width: 60%;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.goods_info .detail .name {
  color: #333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}

.goods_info .detail .reMark {
  color: gray;
  font-size: 24rpx;
  margin: 10rpx 0;
}

.order_info .pull_right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.order_info .pull_right .price {
  font-size: 29rpx;
}

.order_info .pull_right .count {
  color: #ccc;
  font-size: 28rpx;
}

.price_intro{
  color: #444;
  text-align: right;
  font-size: 26rpx;
}

.price_intro .price{
  font-size: 30rpx;
}