/* pages/moneyBag/moneyBag.wxss */

page {
  background-color: #F1F1F1;
}

.header {
  width: 100vw;
  height: 30vh;
  /* background-color: var(--themeColor); */
  background: linear-gradient(to left, #FF221A, #FE4620, var(--themeColor));
  /* background: url('http://ad.jnqianle.cn/upload/image/20181206/6367970624392001441957999.jpg'); */
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header .title {
  font-size: 28rpx;
  letter-spacing: 6rpx;
}

.header .Balance {
  font-size: 50rpx;
  margin-top: 15rpx;
}

.funcs {
  display: flex;
  justify-content: space-between;
  transform: translateY(-50%);
}

.funcs .func_buttton {
  width: 43vw;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #fff;
  color: var(--themeColor);
  border-radius: 15rpx;
}

.mainCnt {
  width: 93vw;
  margin: 0 auto;
}

.xf_list .item {
  width: 100%;
  height: 120rpx;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 15rpx;
}
.xf_list .item .icon{
  width: 13%;
}

.xf_list .item .icon image{
  width: 60rpx;
  height: 60rpx;
}

.xf_list .item .pull_right {
  width: 87%;
  display: flex;
  height: 100%;
  flex-wrap: wrap;
  align-items: center;
}

.xf_list .item .created_info,
.xf_list .item .xf_info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.xf_list .item .created_info {
  font-size: 30rpx;
}

.xf_list .item .created_info .date {
  color: gray;
}

.xf_list .item .xf_info .box_amount {
  color: gray;
  font-size: 26rpx;
}

.xf_list .item .xf_info .box_amount .rmbFont{
  font-size: 26rpx;
}

.xf_list .item .xf_info .res {
  font-weight: 600;
}