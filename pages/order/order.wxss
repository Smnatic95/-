/* pages/order/order.wxss */
page{
  background-color: #F2F2F2;
}

.nav{
  display: flex;
  font-size: 28rpx;
  height: 80rpx;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}


.orders_swiper{
  width: 100%;
  height: calc(100vh - 80rpx);
}

.orders{
  height: calc(100vh - 80rpx);
  box-sizing: border-box;
  padding:0 20rpx;
  width: 100%;
}

.nav .type.sel{
  color:var(--themeColor);
  border-bottom:5rpx solid var(--themeColor);
}


.nav .type{
  width: 25%;
  color: #444;
  text-align: center;
  padding:20rpx 0;
}

.orders .order{
  width: 95vw;
  box-sizing: border-box;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
}

.order .funcs{
  display: flex;
  justify-content: flex-end;
  padding-top: 30rpx;
}

.order .funcs .func{
  border: 1px solid #ccc;
  color: #444;
  margin-right: 15rpx;
  box-sizing: border-box;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  min-width: 130rpx;
  text-align: center;
}

.order .funcs .func:last-of-type{
  margin-right: 0;
}

.order .funcs .func.light{
  color: var(--themeColor);
  border: 1px solid var(--themeColor);
}

.noOrder image{
  width: 100%;
}