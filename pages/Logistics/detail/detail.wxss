/* component/Logistics/logItem/logItem.wxss */
.logItem {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding-right: 15rpx;
}

.logItem .pull_left {
  width: 10vw;
  display: flex;
  justify-content: center;
}

.logItem .pull_left .circleAS {
  width: 4rpx;
  height: 100%;
  background-color: #ccc;
  position: relative;
}

.logItem .pull_left .circleAS::before {
  content: '';
  display: inline-block;
  background-color: #FA4906;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
  transform: translateX(-50%);
  box-shadow: 2rpx 2rpx 10rpx var(--themeColor);
}

.logItem .pull_right {
  width: calc(100% - 10vw);
  box-sizing: border-box;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.logItem .detail {
  width: 100%;
  line-height: 35rpx;
}

.date {
  color: gray;
  font-size: 23rpx;
  margin-top: 15rpx;
}

.logList {
  width: 100vw;
  font-size: 28rpx;
}

.dh_info {
  display: flex;
  background-color: #eee;
  padding: 10rpx 20rpx;
  font-size: 25rpx;
  align-items: center;
}

.dh_info .dh {
  margin-left: 15rpx;
}

.dh_info .copy {
  margin-left: 15rpx;
  padding: 8rpx;
  background-color: #ccc;
  border-radius: 15rpx;
  font-size: 20rpx;
}

.navi_map{
  width: 100%;
  height: 400rpx;
}